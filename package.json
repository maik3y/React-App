{
  "name": "perfection-tv",
  "version": "1.0.0",
  "description": "Website for perfection.tv",
  "repository": "https://github.com/PerfectionCSGO/perfection-tv.git",
  "author": "perfection.tv <perfectioncsgo@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:clean": "rimraf ./dist",
    "build:renderer:hot": "webpack-dev-server --progress --hot --open --config ./webpack.config.development",
    "build:renderer": "webpack --progress --config ./webpack.config.production",
    "build": "yarn build:clean && yarn build:renderer",
    "ci": "yarn build:clean && yarn build:renderer && yarn eslint-check && yarn eslint && yarn prettier && yarn stylelint && yarn typedoc && yarn test",
    "eslint-check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "eslint": "eslint \"./**/*.{ts,tsx}\"",
    "prettier": "prettier --list-different \"./**/*.{tsx,jsx,ts,js,less,scss,css}\"",
    "start": "yarn build:clean && yarn build:renderer:hot",
    "stylelint": "stylelint \"./**/*.{scss,less,css}\"",
    "test": "jest --config jestconfig.json",
    "typedoc": "typedoc --out ./dist/documentation --excludeExternals --mode modules --module commonjs --target ES6 ./src"
  },
  "dependencies": {
    "core-js": "^3.2.0",
    "mobx": "^5.13.0",
    "mobx-react-lite": "^1.4.1",
    "react": "^16.9.0",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-hot-loader": "^4.12.10",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.8.5",
    "@types/react-router-dom": "^4.3.4",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-jest": "^22.15.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.9.3",
    "terser-webpack-plugin": "^1.4.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "jest-junit": {
    "suiteName": "Jest tests",
    "output": "./dist/jest/test-results.xml"
  }
}
